generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enums 

enum Role {
  SUPER_ADMIN
  MANAGER
  COORDINATOR
  PUBLIC
  ADMIN
  DRIVER
}

enum BusinessType {
  CARE
  TAXI
  EDUCATION
  DELIVERY
  SUPPORT
  OTHER
}

enum BusinessMembershipRole {
  ADMIN
  COORDINATOR
  MANAGER
  DRIVER
  OWNER
  DISPATCHER
}

enum BidStatus {
  PENDING
  ACCEPTED
  CONFIRMED
  REJECTED
  EXPIRED
  WITHDRAWN
  CANCELED_MANAGER
  CANCELED_DRIVER
}

enum CanceledBy {
  MANAGER
  DRIVER
}

enum FeedbackType {
  NOTE
  COMPLAINT
}

enum BookingVisibility {
  PRIVATE_TO_COMPANY
  AREA_WIDE
  PUBLIC
}

enum BookingStatus {
  PENDING
  BID_ACCEPTED
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum VehicleClass {
  STANDARD_CAR
  LARGE_CAR
  SIDE_LOADING_WAV
  REAR_LOADING_WAV
  DOUBLE_WAV
  MINIBUS_ACCESSIBLE
  MINIBUS_STANDARD
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation("UserPasswordResetTokens", fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String               @id @default(cuid())
  email                String               @unique
  name                 String?
  phone                String?
  password             String?
  role                 Role                 @default(PUBLIC)
  image                String?
  emailVerified        DateTime?
  isApproved           Boolean              @default(false)
  driverOnboarded      Boolean              @default(false)
  managerOnboarded     Boolean              @default(false)
  coordinatorOnboarded Boolean              @default(false)
  adminOnboarded       Boolean              @default(false)
  managerId            String?
  businessId           String?
  areaId               String?
  postcode             String?
  radius               Int?
  capabilities         String[]
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  deletedAt            DateTime?
  Account              Account[]
  bookings             Booking[]            @relation("CreatorBookings")
  bids                 Bid[]                @relation("UserBids")
  adminOfBusiness      Business?            @relation("BusinessAdminUser")
  memberships          BusinessMembership[] @relation("MembershipUser")
  verifiedMemberships  BusinessMembership[] @relation("MembershipVerifier")
  driver               Driver?              @relation("UserDriver")
  acceptedBookings     Booking[]            @relation("UserAcceptedBookings")
  houses               House[]
  incidents            Incident[]
  invoices             Invoice[]
  notifications        Notification[]
  passwordResetTokens  PasswordResetToken[] @relation("UserPasswordResetTokens")
  schedules            RideSchedule[]       @relation("DriverSchedules")
  savedLocations       SavedLocation[]
  Session              Session[]
  feedback             TripFeedback[]
  area                 Area?                @relation("UserArea", fields: [areaId], references: [id])
  business             Business?            @relation("UserBusiness", fields: [businessId], references: [id])
  manager              User?                @relation("ManagerDrivers", fields: [managerId], references: [id])
  drivers              User[]               @relation("ManagerDrivers")

  @@index([email])
  @@index([role, deletedAt])
  @@index([deletedAt])
}

model AccessibilityProfile {
  id                         String        @id @default(cuid())
  highRoof                   Boolean       @default(false)
  seatTransferHelp           Boolean       @default(false)
  mobilityAidStorage         Boolean       @default(false)
  electricScooterStorage     Boolean       @default(false)
  ageOfPassenger             Int?
  carerPresent               Boolean       @default(false)
  escortRequired             Boolean       @default(false)
  quietEnvironment           Boolean       @default(false)
  noConversation             Boolean       @default(false)
  noScents                   Boolean       @default(false)
  specificMusic              String?
  visualSchedule             Boolean       @default(false)
  signLanguageRequired       Boolean       @default(false)
  textOnlyCommunication      Boolean       @default(false)
  preferredLanguage          String?
  translationSupport         Boolean       @default(false)
  assistanceRequired         Boolean       @default(false)
  assistanceAnimal           Boolean       @default(false)
  familiarDriverOnly         Boolean       @default(false)
  femaleDriverOnly           Boolean       @default(false)
  nonWAVvehicle              Boolean       @default(false)
  medicationOnBoard          Boolean       @default(false)
  medicalConditions          String?
  firstAidTrained            Boolean       @default(false)
  conditionAwareness         Boolean       @default(false)
  additionalNeeds            String?
  createdAt                  DateTime      @default(now())
  updatedAt                  DateTime      @updatedAt
  deletedAt                  DateTime?
  vehicleClassRequired       VehicleClass?
  wheelchairUsersStaySeated  Int           @default(0)
  wheelchairUsersCanTransfer Int           @default(0)
  ambulatoryPassengers       Int           @default(0)
  booking                    Booking?      @relation("BookingAccessibility")
  driver                     Driver?       @relation("DriverAccessibility")

  @@index([femaleDriverOnly])
  @@index([assistanceAnimal])
  @@index([deletedAt])
  @@index([vehicleClassRequired])
}

model Driver {
  id                        String               @id @default(cuid())
  userId                    String               @unique
  name                      String
  vehicleReg                String
  amenities                 String[]
  localPostcode             String
  radiusMiles               Int
  baseLat                   Float?
  baseLng                   Float?
  phone                     String
  approved                  Boolean              @default(false)
  gender                    String?
  completedRides            Int                  @default(0)
  rating                    Float                @default(0.0)
  accessibilityProfileId    String               @unique
  createdAt                 DateTime             @default(now())
  updatedAt                 DateTime             @updatedAt
  suspended                 Boolean              @default(false)
  suspendedBy               String?
  suspendedDate             DateTime?
  suspendedReason           String?
  deletedAt                 DateTime?
  vehicleClass              VehicleClass
  wheelchairSpacesInstalled Int                  @default(0)
  seatedCapacityRemaining   Int                  @default(4)
  canAccommodateTransfers   Boolean              @default(true)
  Bids                      Bid[]                @relation("DriverBids")
  bookings                  Booking[]            @relation("DriverBookings")
  accessibilityProfile      AccessibilityProfile @relation("DriverAccessibility", fields: [accessibilityProfileId], references: [id], onDelete: Cascade)
  user                      User                 @relation("UserDriver", fields: [userId], references: [id], onDelete: Cascade)
  compliance                DriverCompliance?    @relation("DriverComplianceRelation")
    // Subscription fields
  isSubscribed          Boolean   @default(false)
  subscriptionTier      String    @default("STANDARD") // FOUNDING, STANDARD, SILVER, GOLD, PLATINUM
  subscriptionStartDate DateTime?
  subscriptionExpiresAt DateTime?
  paypalSubscriptionId  String?   @unique
  paypalPlanId          String?
  lastPaymentDate       DateTime?

  @@index([approved, suspended, deletedAt, vehicleClass])
  @@index([baseLat, baseLng])
  @@index([userId])
  @@index([accessibilityProfileId])
}

model DriverCompliance {
  id                          String    @id @default(cuid())
  driverId                    String    @unique
  ukDrivingLicence            Boolean
  licenceNumber               String
  localAuthorityRegistered    Boolean
  dbsChecked                  Boolean
  publicLiabilityInsurance    Boolean
  fullyCompInsurance          Boolean
  healthCheckPassed           Boolean
  englishProficiency          Boolean
  createdAt                   DateTime  @default(now())
  updatedAt                   DateTime  @updatedAt
  dbsCheckedBy                String?
  dbsIssueDate                DateTime?
  dbsStatus                   String?
  dbsUpdateServiceConsent     Boolean   @default(false)
  dbsUpdateServiceConsentDate DateTime?
  dbsUpdateServiceNumber      String?
  lastDbsCheck                DateTime?
  nextDbsCheckDue             DateTime?
  deletedAt                   DateTime?
  driver                      Driver    @relation("DriverComplianceRelation", fields: [driverId], references: [id], onDelete: Cascade)



  @@index([driverId])
  @@index([nextDbsCheckDue, deletedAt])
  @@index([dbsStatus])
}

model Business {
  id               String               @id @default(cuid())
  type             String
  name             String
  phone            String?
  email            String?
  website          String?
  address1         String?
  city             String?
  postcode         String?
  approved         Boolean              @default(false)
  adminUserId      String               @unique
  lat              Float?
  lng              Float?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  deletedAt        DateTime?
  bookings         Booking[]            @relation("BusinessBookings")
  adminUser        User                 @relation("BusinessAdminUser", fields: [adminUserId], references: [id])
  memberships      BusinessMembership[] @relation("MembershipBusiness")
  housesAsBusiness House[]              @relation("HouseBusiness")
  housesAsCompany  House[]              @relation("HouseCompany")
  incidents        Incident[]
  acceptedBookings Booking[]            @relation("BusinessAcceptedBookings")
  employees        User[]               @relation("UserBusiness")

  @@index([adminUserId])
  @@index([lat, lng])
  @@index([postcode])
  @@index([deletedAt])
}

model BusinessMembership {
  id                 String                 @id @default(cuid())
  userId             String
  businessId         String
  role               BusinessMembershipRole
  dbsChecked         Boolean                @default(false)
  insuranceChecked   Boolean                @default(false)
  plInsuranceChecked Boolean                @default(false)
  isVerified         Boolean                @default(false)
  invitedAt          DateTime?
  verifiedAt         DateTime?
  verifiedById       String?
  verifyNotes        String?
  createdAt          DateTime               @default(now())
  deletedAt          DateTime?
  business           Business               @relation("MembershipBusiness", fields: [businessId], references: [id], onDelete: Cascade)
  user               User                   @relation("MembershipUser", fields: [userId], references: [id], onDelete: Cascade)
  verifiedBy         User?                  @relation("MembershipVerifier", fields: [verifiedById], references: [id])

  @@unique([userId, businessId])
  @@index([businessId, role])
  @@index([businessId, isVerified])
  @@index([deletedAt])
}

model Area {
  id    String  @id @default(cuid())
  name  String  @unique
  house House[]
  users User[]  @relation("UserArea")
}

model House {
  id         String     @id @default(cuid())
  businessId String
  companyId  String?
  label      String
  line1      String
  city       String
  postcode   String
  notes      String?
  internalId String     @unique
  password   String    //stored with bcrypt
  loginName  String     @unique
  lat        Float?
  lng        Float?
  createdAt  DateTime   @default(now())
  deletedAt  DateTime?
  managerId  String
  areaId     String
  area       Area       @relation(fields: [areaId], references: [id])
  business   Business   @relation("HouseBusiness", fields: [businessId], references: [id], onDelete: Cascade)
  company    Business?  @relation("HouseCompany", fields: [companyId], references: [id])
  manager    User       @relation(fields: [managerId], references: [id], onDelete: Cascade)
  incidents  Incident[]
  residents  Resident[]
  sessions   HouseSession[]

  @@index([businessId, label])
  @@index([deletedAt])
}

model HouseSession {
  id        String   @id @default(cuid())
  token     String   @unique
  houseId   String
  house     House    @relation(fields: [houseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
  
  @@index([houseId])
}

model Resident {
  id        String   @id @default(cuid())
  initials  String
  name      String
  houseId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  house     House    @relation(fields: [houseId], references: [id], onDelete: Cascade)
}

model SavedLocation {
  id        String    @id @default(cuid())
  userId    String
  name      String
  address   String
  postcode  String
  notes     String?
  useCount  Int       @default(0)
  lastUsed  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, useCount])
}

model Booking {
  id                     String            @id @default(cuid())
  createdById            String
  businessId             String?
  pickupTime             DateTime
  returnTime             DateTime?
  pickupLocation         String
  pickupLatitude         Float?
  pickupLongitude        Float?
  dropoffLocation        String
  dropoffLatitude        Float?
  dropoffLongitude       Float?
  initials               String[]
  accessibilityProfileId String            @unique
  visibility             BookingVisibility @default(PRIVATE_TO_COMPANY)
  bidDeadline            DateTime?
  status                 BookingStatus     @default(PENDING)

  // Driver assignment (for direct bookings or accepted bids)
  driverId      String?
  acceptedBidId String? @unique

  // Trip metrics
  estimatedCostPence Int?
  finalCostPence     Int?
  distanceMiles      Float?
  durationMinutes    Int?

  // Timestamps & cancellation
  confirmedAt          DateTime?
  canceledAt           DateTime?
  canceledBy           CanceledBy?
  cancellationReason   String?
  acceptedAt           DateTime?
  acceptedByUserId     String?
  acceptedByBusinessId String?

  // Block booking fields
  blockNotes        String?
  blockRides        Json?
  isBlockBooking    Boolean @default(false)
  totalRidesInBlock Int     @default(1)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Relations
  acceptedBid          Bid?                 @relation("AcceptedBid", fields: [acceptedBidId], references: [id])
  acceptedByBusiness   Business?            @relation("BusinessAcceptedBookings", fields: [acceptedByBusinessId], references: [id])
  acceptedByUser       User?                @relation("UserAcceptedBookings", fields: [acceptedByUserId], references: [id])
  accessibilityProfile AccessibilityProfile @relation("BookingAccessibility", fields: [accessibilityProfileId], references: [id], onDelete: Cascade)
  business             Business?            @relation("BusinessBookings", fields: [businessId], references: [id])
  createdBy            User                 @relation("CreatorBookings", fields: [createdById], references: [id])
  driver               Driver?              @relation("DriverBookings", fields: [driverId], references: [id])
  bids                 Bid[]                @relation("BookingBids")
  invoices             Invoice[]
  notifications        Notification[]
  schedule             RideSchedule?
  feedback             TripFeedback[]

  @@index([status, pickupTime, deletedAt])
  @@index([driverId, status, deletedAt])
  @@index([createdById, deletedAt])
  @@index([businessId, status, deletedAt])
  @@index([pickupLatitude, pickupLongitude])
  @@index([accessibilityProfileId])
}

model Bid {
  id             String    @id @default(cuid())
  bookingId      String
  userId         String
  amountCents    Int
  message        String?
  etaMinutes     Int?
  vehicleNotes   String?
  validUntil     DateTime?
  status         BidStatus @default(PENDING)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  driverId       String
  idempotencyKey String?   @unique
  deletedAt      DateTime?

  // NEW FIELDS - already added âœ…
  acceptedAt         DateTime?
  confirmedAt        DateTime?
  expiresAt          DateTime?
  canceledAt         DateTime?
  canceledBy         CanceledBy?
  cancellationReason String?

  // Relations
  acceptedOnRide Booking?       @relation("AcceptedBid")
  booking        Booking        @relation("BookingBids", fields: [bookingId], references: [id], onDelete: Cascade)
  driver         Driver         @relation("DriverBids", fields: [driverId], references: [id])
  user           User           @relation("UserBids", fields: [userId], references: [id], onDelete: Cascade)
  notifications  Notification[]

  @@index([bookingId, status, amountCents])
  @@index([userId, createdAt])
  @@index([deletedAt])
  @@index([status, createdAt])
  @@index([driverId, status])
  @@index([bookingId, status])
  @@index([expiresAt])
}

model RideSchedule {
  id        String    @id @default(cuid())
  bookingId String    @unique
  driverId  String
  startAt   DateTime
  endAt     DateTime?
  notes     String?
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  booking   Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  driver    User      @relation("DriverSchedules", fields: [driverId], references: [id], onDelete: Cascade)

  @@index([driverId, startAt])
  @@index([deletedAt])
  @@index([startAt])
}

model Notification {
  id        String    @id @default(cuid())
  userId    String
  type      String
  bookingId String?
  bidId     String?
  payload   Json?
  readAt    DateTime?
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  booking   Booking?  @relation(fields: [bookingId], references: [id])
  bid       Bid?      @relation(fields: [bidId], references: [id])
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([deletedAt])
}

model TripFeedback {
  id        String       @id @default(cuid())
  userId    String
  bookingId String?
  type      FeedbackType @default(NOTE)
  message   String
  resolved  Boolean      @default(false)
  createdAt DateTime     @default(now())
  deletedAt DateTime?
  booking   Booking?     @relation(fields: [bookingId], references: [id])
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([deletedAt])
  @@index([userId, createdAt])
  @@index([bookingId])
}

model Invoice {
  id        String  @id @default(cuid())
  driverId  String
  bookingId String?

  amountCents Int
  currency    String    @default("GBP")
  issuedAt    DateTime  @default(now())
  paid        Boolean   @default(false)
  paidAt      DateTime?
  notes       String?
  deletedAt   DateTime?
  booking     Booking?  @relation(fields: [bookingId], references: [id])
  driver      User      @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@index([deletedAt])
  @@index([driverId, issuedAt])
  @@index([bookingId])
}

model Incident {
  id           String   @id @default(cuid())
  userId       String
  businessId   String
  houseId      String?
  time         DateTime
  type         String
  description  String
  emergency    Boolean
  actionsTaken String?
  followUp     Boolean
  image        String?
  evidenceUrl  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  business     Business @relation(fields: [businessId], references: [id])
  house        House?   @relation(fields: [houseId], references: [id])
  user         User     @relation(fields: [userId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
